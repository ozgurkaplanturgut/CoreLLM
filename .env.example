# App Settings
APP_NAME=sse-chatbot
APP_ENV=dev
LOG_LEVEL=INFO

# OpenAI Settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-nano-2025-08-07

# vllm settings
CHAT_BASE_URL=http://vllm-chat:8003/v1
VLLM_CHAT_API_KEY=chat-abc123
CHAT_MODEL_ID=Qwen/Qwen2.5-7B-Instruct-AWQ

# chat settings
chat_client=openai # options: openai, vllm

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
CHAT_REQUEST_TOPIC=chat_requests
CHAT_RESPONSE_TOPIC=chat_responses
CHAT_WORKER_GROUP_ID=chat-worker
DISPATCHER_CONSUMER_GROUP=api-dispatcher

# DLQ / Retry Settings
CHAT_DLQ_TOPIC=chat_requests_dlq
MAX_RETRIES=5
RETRY_BASE_SECONDS=1.0
RETRY_MAX_SECONDS=30.0

# Redis Settings
REDIS_URL=redis://redis:6379/0
IDEMPOTENCY_TTL_SECONDS=86400

# MongoDB Settings
MONGO_DSN=mongodb://mongo:27017
MONGO_DB_NAME=sse_di_chatbot

# Worker Settings
WORKER_MAX_CONCURRENCY=8

# SSE API Timeouts (Seconds)
SSE_HEARTBEAT_S=15.0
SSE_MAX_IDLE_S=60.0
SSE_MAX_TOTAL_S=180.0

# LLM Stream Timeouts (Seconds)
STREAM_FIRST_TOKEN_TIMEOUT=30.0
STREAM_IDLE_TIMEOUT=60.0
STREAM_HARD_TIMEOUT=120.0